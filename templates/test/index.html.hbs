<!-- Meta tags -->
<meta name="viewport" content="width=device-width, initial-scale=1">

<!-- Styles -->
<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">
<link rel="stylesheet" href="../dist/siimple-colors.css">
<style>
    html {
        margin: 0px;
    }
    body {
        padding: 100px;
    }
    .color {
        display: block;
        width: 100%;
        margin-bottom: 15px;
        border-radius: 5px;
        height: 40px;
    }
    .color-item {
        display: block;
        width: 33.33%;
        font-size: 16px;
        font-weight: bold;
        font-family: 'Montserrat', sans-serif;
        height: 40px;
        line-height: 40px;
        float: left;
    }
    .color-item:first-child {
        border-top-left-radius: 5px;
        border-bottom-left-radius: 5px;
    }
    .color-item:last-child {
        border-top-right-radius: 5px;
        border-bottom-right-radius: 5px;
    }
</style>

{{#each colors as |color|}}
<div class="color" align="center" style="color:{{color.over}};">
    <div class="color-item siimple--bg-{{color.name}}-light">{{color.name}}-light</div>
    <div class="color-item siimple--bg-{{color.name}}">{{color.name}}</div>
    <div class="color-item siimple--bg-{{color.name}}-dark">{{color.name}}-dark</div>
</div>
{{/each}}
