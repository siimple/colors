<!-- Meta tags -->
<meta name="viewport" content="width=device-width, initial-scale=1">

<!-- Styles -->
<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">
<link rel="stylesheet" href="../dist/siimple-colors.css">
<style>
    html {
        margin: 0px;
    }
    body {
        padding: 50px;
        background-color: #F0F1F5;
    }
    .color {
        display: inline-block;
        width: 240px;
        margin-bottom: 10px;
        margin-right: 10px;
        border-radius: 5px;
        height: 100px;
        background-color: #ffffff;
        border-bottom: 2px solid #DCDCE0;
    }
    .color-name {
        display: block;
        height: 40px;
        line-height: 40px;
        font-family: 'Montserrat', sans-serif;
        color: #ADADAD;
    }
    .color-items {
        display: block;
    }
    .color-item {
        display: block;
        width: 20%;
        height: 60px;
        float: left;
    }
    .color-item:first-child {
        border-top-left-radius: 5px;
    }
    .color-item:last-child {
        border-top-right-radius: 5px;
    }
</style>

{{#each colors as |color|}}
<div class="color" align="center">
    <div class="color-items">
        <div class="color-item siimple--bg-{{color.name}}-extra-light"></div>
        <div class="color-item siimple--bg-{{color.name}}-light"></div>
        <div class="color-item siimple--bg-{{color.name}}"></div>
        <div class="color-item siimple--bg-{{color.name}}-dark"></div>
        <div class="color-item siimple--bg-{{color.name}}-extra-dark"></div>
    </div>
    <div class="color-name">{{color.name}}</div>
</div>
{{/each}}
