//Colors palette
$siimple-palette:
(
{{#each list as |color|}}
  "{{color.name}}": ( {{#each color.value}}"{{@index}}": {{this}}{{#unless @last}}, {{/unless}}{{/each}} ){{#unless @last}}, {{/unless}}
{{/each}}
);

{{#each list as |color|}}
//{{capitalize color.name}} palette
$siimple-palette-{{ color.name }}: ( {{#each color.values}}"{{@index}}": {{this}}{{#unless @last}}, {{/unless}}{{/each}} );

{{/each}}
