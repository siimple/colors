//Colors palette
$siimple-colors: (
{{#each colors}}
    "{{this.name}}": ("dark": {{this.dark}}, "base": {{this.base}}, "light": {{this.light}}, "over": {{this.over}}){{#unless @last}}, {{/unless}}
{{/each}}
);

$siimple-palette: $siimple-colors;

{{#each colors}}
//{{this.name}} colors
$siimple-{{this.name}}-dark: siimple-color("{{this.name}}", "dark");
$siimple-{{this.name}}: siimple-color("{{this.name}}", "base");
$siimple-{{this.name}}-light: siimple-color("{{this.name}}", "light");

{{/each}}

//White base color 
$siimple-white: #ffffff;

